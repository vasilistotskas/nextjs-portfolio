{
	"name": "nextjs-portfolio",
	"version": "1.21.0",
	"private": false,
	"repository": "https://github.com/vasilistotskas/nextjs-portfolio.git",
	"license": "MIT",
	"scripts": {
		"build": "prisma generate && next build",
		"clean": "rm -rf .next build .vercel",
		"dev": "next",
		"dev:turbo": "next dev --turbo",
		"format": "prettier --check --ignore-path .gitignore .",
		"format:fix": "prettier --write --ignore-path .gitignore .",
		"postinstall": "prisma generate",
		"lint": "next lint -- --ignore-path .gitignore",
		"lint:fix": "next lint --fix -- --ignore-path .gitignore",
		"semantic-release": "semantic-release",
		"start": "next start",
		"type-check": "tsc --noEmit"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"prettier": {
		"arrowParens": "always",
		"printWidth": 90,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "none",
		"useTabs": true
	},
	"release": {
		"branches": [
			"master"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"assets": [
						"CHANGELOG.md",
						"package.json"
					],
					"message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist",
							"label": "Distribution"
						}
					]
				}
			]
		]
	},
	"dependencies": {
		"@next/bundle-analyzer": "^14.0.3",
		"@portabletext/react": "^3.0.11",
		"@prisma/client": "^5.6.0",
		"@sanity/image-url": "^1.0.2",
		"@sanity/ui": "^1.9.3",
		"@sanity/vision": "^3.21.0",
		"@sendgrid/mail": "^8.0.0",
		"@tailwindcss/typography": "0.5.10",
		"@vercel/analytics": "^1.1.1",
		"@vercel/og": "^0.5.20",
		"classnames": "^2.3.2",
		"date-fns": "2.30.0",
		"embla-carousel-autoplay": "^7.1.0",
		"embla-carousel-react": "^7.1.0",
		"eventsource-parser": "^1.1.1",
		"googleapis": "129.0.0",
		"intl-segmenter-polyfill": "^0.4.4",
		"lodash": "^4.17.21",
		"motion": "^10.16.4",
		"next": "14.0.3",
		"next-auth": "4.24.5",
		"next-i18next": "^15.0.0",
		"next-mdx-remote": "^4.4.1",
		"next-pwa": "^5.6.0",
		"next-sanity": "^7.0.1",
		"next-themes": "^0.2.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.48.2",
		"sanity": "^3.21.0",
		"sanity-plugin-asset-source-unsplash": "^1.1.2",
		"sass": "^1.69.5",
		"sharp": "^0.33.0",
		"styled-components": "^6.1.1",
		"suspend-react": "^0.1.3",
		"swr": "2.2.4",
		"tailwindcss": "3.3.6"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.4",
		"@semantic-release/npm": "^11.0.1",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@types/node": "20.10.3",
		"@types/react": "^18.2.42",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"autoprefixer": "10.4.16",
		"babel-loader": "^9.1.3",
		"eslint": "^8.55.0",
		"eslint-config-next": "14.0.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"globby": "14.0.0",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-packagejson": "^2.4.7",
		"prettier-plugin-tailwindcss": "^0.5.8",
		"prisma": "5.6.0",
		"reading-time": "^1.5.0",
		"rehype": "13.0.1",
		"rehype-autolink-headings": "7.1.0",
		"rehype-code-titles": "1.2.0",
		"rehype-prism-plus": "^1.6.3",
		"rehype-slug": "6.0.0",
		"remark-gfm": "^4.0.0",
		"rss": "1.2.2",
		"semantic-release": "^22.0.9",
		"typescript": "^5.3.2"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": "^8.0.0"
	},
	"publishConfig": {
		"@vasilistotskas:registry": "https://npm.pkg.github.com"
	},
	"git": {
		"pre-commit": "lint-staged"
	},
	"packageManager": "^pnpm@8.11.0"
}
