{
	"name": "groove-nextjs-portfolio",
	"version": "1.5.4",
	"private": false,
	"repository": "https://github.com/vasilistotskas/nextjs-portfolio.git",
	"license": "MIT",
	"scripts": {
		"build": "prisma generate && next build",
		"clean": "rm -rf .next build .vercel",
		"dev": "next",
		"dev:turbo": "next dev --turbo",
		"format": "prettier --check --ignore-path .gitignore .",
		"format:fix": "prettier --write --ignore-path .gitignore .",
		"postinstall": "prisma generate",
		"lint": "next lint -- --ignore-path .gitignore",
		"lint:fix": "next lint --fix -- --ignore-path .gitignore",
		"semantic-release": "semantic-release",
		"start": "next start",
		"type-check": "tsc --noEmit"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"prettier": {
		"arrowParens": "always",
		"printWidth": 90,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "none",
		"useTabs": true
	},
	"release": {
		"branches": [
			"master"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"assets": [
						"CHANGELOG.md",
						"package.json"
					],
					"message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist",
							"label": "Distribution"
						}
					]
				}
			]
		]
	},
	"dependencies": {
		"@next/bundle-analyzer": "^13.4.6",
		"@portabletext/react": "^3.0.2",
		"@prisma/client": "^4.15.0",
		"@sanity/image-url": "^1.0.2",
		"@sanity/vision": "^3.12.1",
		"@sendgrid/mail": "^7.7.0",
		"@tailwindcss/typography": "0.5.9",
		"@vercel/analytics": "^1.0.1",
		"@vercel/og": "^0.5.7",
		"classnames": "^2.3.2",
		"date-fns": "2.30.0",
		"embla-carousel-autoplay": "^7.1.0",
		"embla-carousel-react": "^7.1.0",
		"eventsource-parser": "^1.0.0",
		"googleapis": "118.0.0",
		"intl-segmenter-polyfill": "^0.4.4",
		"lodash": "^4.17.21",
		"motion": "^10.16.2",
		"next": "13.4.6",
		"next-auth": "4.22.1",
		"next-i18next": "^14.0.0",
		"next-mdx-remote": "^4.4.1",
		"next-pwa": "^5.6.0",
		"next-sanity": "^4.3.3",
		"next-themes": "^0.2.1",
		"openai": "^3.3.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.44.3",
		"sanity": "^3.12.1",
		"sanity-plugin-asset-source-unsplash": "^1.1.0",
		"sass": "^1.63.4",
		"sharp": "^0.32.1",
		"styled-components": "^5.3.11",
		"suspend-react": "^0.1.3",
		"swr": "2.1.5",
		"tailwindcss": "3.3.2"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^10.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.0.3",
		"@semantic-release/npm": "^10.0.4",
		"@semantic-release/release-notes-generator": "^11.0.3",
		"@types/node": "20.3.1",
		"@types/react": "^18.2.12",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"autoprefixer": "10.4.14",
		"eslint": "^8.43.0",
		"eslint-config-next": "13.4.6",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"globby": "13.1.4",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-packagejson": "^2.4.3",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"prisma": "4.15.0",
		"reading-time": "^1.5.0",
		"rehype": "12.0.1",
		"rehype-autolink-headings": "6.1.1",
		"rehype-code-titles": "1.2.0",
		"rehype-prism-plus": "^1.5.1",
		"rehype-slug": "5.1.0",
		"remark-gfm": "^3.0.1",
		"rss": "1.2.2",
		"semantic-release": "^21.0.5",
		"typescript": "^5.1.3"
	},
	"engines": {
		"node": ">=18.16.0",
		"npm": ">=9.5.1"
	},
	"publishConfig": {
		"@vasilistotskas:registry": "https://npm.pkg.github.com"
	},
	"git": {
		"pre-commit": "lint-staged"
	}
}
